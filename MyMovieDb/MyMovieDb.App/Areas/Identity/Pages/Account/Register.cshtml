@page
@using MyMovieDb.App.Helpers
@using MyMovieDb.Common.Enums
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-6">
            @Html.FormGroupFor(m => m.Input.Username)
            @Html.FormGroupFor(m => m.Input.Email)
            @Html.FormGroupFor(m => m.Input.Password)
            @Html.FormGroupFor(m => m.Input.ConfirmPassword)
        </div>
        <div class="col-sm-6">
            @Html.FormGroupFor(m => m.Input.FirstName)
            @Html.FormGroupFor(m => m.Input.LastName)

            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input type="date" asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                @Html.DropDownListFor(
                    m => m.Input.Gender,
                    Html.GetEnumSelectList<Gender>(),
                    "",
                    new { @class = "form-control" })
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-outline-yellow">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
